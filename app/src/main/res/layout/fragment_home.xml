<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutTopUser0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imgProfile10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_imgperfil"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                app:circleCrop="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUserName10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del usuario"
                    android:textStyle="bold"
                    android:textSize="18sp"/>


            </LinearLayout>

        </LinearLayout>


    <!-- Contenedor del ranking -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRanking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/layoutTopUser0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Usuario superior en el ranking -->
            <LinearLayout
                android:id="@+id/layoutTopUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imgProfile1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_rankings"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    app:circleCrop="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del usuario"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/txtUserScore1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntuaci贸n: 1200 pts"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtRankingPosition1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@android:color/holo_green_dark"/>
            </LinearLayout>

            <!-- Usuario actual en el ranking (Centro) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imgProfile2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_rankings"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    app:circleCrop="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del usuario"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/txtUserScore2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntuaci贸n: 1200 pts"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtRankingPosition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@android:color/holo_green_dark"/>
            </LinearLayout>

            <!-- Usuario inferior en el ranking -->
            <LinearLayout
                android:id="@+id/layoutBottomUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgProfile3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_rankings"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    app:circleCrop="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del usuario"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/txtUserScore3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntuaci贸n: 1200 pts"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtRankingPosition3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@android:color/holo_green_dark"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWordle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cardRanking"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imagenwordle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/imagenwordle"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPlantdex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cardRanking"
        app:layout_constraintStart_toEndOf="@id/cardWordle"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imagenPlantdex"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/imagenplantdex" />

    </androidx.cardview.widget.CardView>


    <!-- Calendario -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cardWordle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dateTextAppearance="@android:style/TextAppearance.Material"
            android:padding="8dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Secci贸n "Saber de plantas" -->
    <TextView
        android:id="@+id/txtSaberDePlantas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saber de plantas"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardCalendar"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Carrusel de plantas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plantsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="50dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="10"
        tools:listitem="@layout/item_plant"
        app:layout_constraintTop_toBottomOf="@id/txtSaberDePlantas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
